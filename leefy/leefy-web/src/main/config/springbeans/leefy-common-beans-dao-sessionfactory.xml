    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>

  <bean id="userRoleDao" class="com.jeesoft.web.dao.UserRoleDaoImpl">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>

  <bean id="userLoginDao" class="com.jeesoft.web.dao.UserLoginDaoImpl">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>

  <bean id="userSecurityQuestionsDao"
    class="com.jeesoft.web.dao.UserSecurityQuestionsDaoImpl">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>
  <bean id="securityQuestionsDao" class="com.jeesoft.web.dao.SecurityQuestionsDaoImpl">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>
  
</beans>
